<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp"
    android:background="#0f6b66">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/etPetName" android:hint="Pet Name" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/rounded_input" android:padding="12dp"/>
        <EditText android:id="@+id/etSpecies" android:hint="Species" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="8dp" android:background="@drawable/rounded_input" android:padding="12dp"/>
        <EditText android:id="@+id/etBreed" android:hint="Breed" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="8dp" android:background="@drawable/rounded_input" android:padding="12dp"/>
        <EditText android:id="@+id/etAge" android:hint="Age in months" android:inputType="number" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="8dp" android:background="@drawable/rounded_input" android:padding="12dp"/>
        <EditText android:id="@+id/etMedHistory" android:hint="Medical history" android:layout_width="match_parent" android:layout_height="120dp" android:layout_marginTop="8dp" android:background="@drawable/rounded_input" android:padding="12dp"/>
        <Button android:id="@+id/btnRegisterPet" android:text="Register" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="12dp" android:backgroundTint="#F08A44" android:textColor="#ffffff"/>
    </LinearLayout>
</ScrollView>
